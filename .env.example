# =============================================================================
# Meetily Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# LLM Provider API Keys (for meeting summaries)
# -----------------------------------------------------------------------------
# Choose your preferred provider and set its API key

# Google Gemini API (recommended for Meeting Agent - uses Gemini 2.0 Flash)
# Get your API key from: https://aistudio.google.com/apikey
GOOGLE_API_KEY=your_google_api_key_here

# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Groq API (fast inference)
GROQ_API_KEY=your_groq_api_key_here

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# OpenRouter API (access to multiple models)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Custom OpenAI-compatible endpoint (optional)
CUSTOM_LLM_ENDPOINT=
CUSTOM_LLM_API_KEY=

# -----------------------------------------------------------------------------
# ElevenLabs Configuration (Scribe v2 Transcription)
# -----------------------------------------------------------------------------
# Get your API key from: https://elevenlabs.io/

ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_MODEL=scribe_v2
# Leave empty for auto-detect, or set language code (pl, en, de, fr, etc.)
ELEVENLABS_DEFAULT_LANGUAGE=
# Pricing tier: free, starter, creator, pro, scale, enterprise
ELEVENLABS_PRICING_TIER=pro

# -----------------------------------------------------------------------------
# Meeting Agent Configuration
# -----------------------------------------------------------------------------
# Model to use for Meeting Agent AI (gemini-2.0-flash recommended for speed)
# Options: gemini-2.0-flash, gemini-2.0-flash-lite, gemini-1.5-pro
MEETING_AGENT_MODEL=gemini-2.0-flash
# Analysis interval in seconds (how often to analyze transcript)
MEETING_AGENT_ANALYSIS_INTERVAL=45

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Directory for Meetily data storage
MEETILY_DATA_DIR=~/.meetily
# Log level: DEBUG, INFO, WARNING, ERROR
MEETILY_LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Backend Server Configuration
# -----------------------------------------------------------------------------
BACKEND_HOST=0.0.0.0
BACKEND_PORT=5167

# -----------------------------------------------------------------------------
# Whisper Server Configuration (local transcription)
# -----------------------------------------------------------------------------
WHISPER_SERVER_HOST=localhost
WHISPER_SERVER_PORT=8178

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# SQLite database path (relative to MEETILY_DATA_DIR)
DATABASE_PATH=meeting_minutes.db
